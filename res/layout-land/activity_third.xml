<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TPMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/TPMainLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/hor_11"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:background="#990000" />"
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/hor_12"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:background="#9966cc"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/TPMainLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:text="@string/hor_21"
            android:gravity="center_vertical|center_horizontal"
            android:background="#339999"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/hor_22"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:background="#9999ff"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/hor_23"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:background="#99cc99"/>
    </LinearLayout>    
    <LinearLayout 
        android:id="@+id/TPMainLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">"
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/hor_31"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:background="#336633"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="@string/hor_32"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:background="#ff9933"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/hor_33"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:background="#ffcc99"/>
    </LinearLayout>
</LinearLayout>
    


